# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/bakircilar-grup
# For DigitalOcean MongoDB: mongodb://username:password@host:port/database

# Redis (Optional - for caching) - Leave empty to disable
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Brevo (Email)
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@bakircilargrup.com
BREVO_SENDER_NAME=Bakırcılar Grup

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# DigitalOcean Spaces (S3-compatible)
DO_SPACES_ENDPOINT=fra1.digitaloceanspaces.com
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_BUCKET=bakircilar-grup
DO_SPACES_REGION=fra1

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
